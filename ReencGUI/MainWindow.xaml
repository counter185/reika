<Window x:Class="ReencGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReencGUI"
        mc:Ignorable="d"
        Style="{StaticResource ReencWindowStyle}"
        Title="reika" Height="450" Width="800" MinHeight="304" MinWidth="678" AllowDrop="True" Drop="Window_Drop">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="523*"/>
            <ColumnDefinition Width="277*"/>
        </Grid.ColumnDefinitions>
        <Label Content="レイカ" Foreground="#0aFFFFFF" FontSize="160" Margin="-20,-40,-20,-40" Grid.ColumnSpan="2"/>
        <DockPanel Grid.Column="1" LastChildFill="True" Margin="5,5">
            <Label Content="Queue" DockPanel.Dock="Top" Foreground="White"/>
            <ListBox x:Name="Panel_Operations" DockPanel.Dock="Bottom" Background="Transparent" BorderBrush="#404040" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0"/>
        </DockPanel>
        <DockPanel Margin="10" LastChildFill="True">

            <DockPanel DockPanel.Dock="Left" LastChildFill="True" >
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Label Content="reika" FontSize="40" Foreground="White"/>
                    <Label x:Name="Label_VersionNumber" Content="" FontSize="14" VerticalContentAlignment="Top" Padding="0,15" Foreground="#808080"/>
                </StackPanel>
                <TextBlock x:Name="Label_FFMPEGVersion" Text="Getting FFMPEG version..." DockPanel.Dock="Bottom" Foreground="#FF808080" Padding="5,0" FontStyle="Italic" FontSize="11"/>
                <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical" DockPanel.Dock="Bottom">
                    <Label DockPanel.Dock="Bottom" Content="Drop a file here to start..." Foreground="#808080"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{DynamicResource ReencButtonStyle}" x:Name="Button_NewEmpty" Content="New file" Margin="10" Padding="8" MinWidth="100" Click="Button_NewEmpty_Click"/>
                        <Button Style="{DynamicResource ReencButtonStyle}" x:Name="Button_QuickReenc" Content="Quick reencode" Margin="10" Padding="8" MinWidth="100" Click="Button_QuickReenc_Click"/>
                    </StackPanel>
                    <Button Style="{DynamicResource ReencButtonStyle}" x:Name="Button_Settings" HorizontalAlignment="Left" Content="Settings" Width="75" Margin="10,0" Padding="2" Click="Button_Settings_Click"/>
                    <Label x:Name="Label_HwInfo" Content="Getting hardware info..." Foreground="#606060" FontStyle="Italic" FontSize="11"/>
                </StackPanel>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
