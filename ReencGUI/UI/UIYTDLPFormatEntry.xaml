<UserControl x:Class="ReencGUI.UI.UIYTDLPFormatEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReencGUI.UI"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label x:Name="Label_FormatDisplayName" Content="Format display name" Foreground="White" FontSize="16"/>
            <Label x:Name="Label_Extension" Content=".mp4" Foreground="Gray" FontSize="12"/>
            <Label x:Name="Label_FormatID" Content="000" Foreground="Gray" FontSize="10"/>
        </StackPanel>
        <Label x:Name="Label_VideoDetails" Content="Video details" Foreground="Gray" Margin="0,-4"/>
        <Label x:Name="Label_AudioDetails" Content="Audio details" Foreground="Gray" Margin="0,-4,0,0"/>
    </StackPanel>
</UserControl>
