<Window x:Class="ReencGUI.UI.WindowCreateFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReencGUI.UI"
        mc:Ignorable="d"
        Style="{StaticResource ReencWindowStyle}"
        Title="WindowCreateFile" Height="480" Width="871">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Create file" Foreground="White" FontSize="25" HorizontalAlignment="Left" Width="187" Height="64" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ScrollViewer Margin="10,56,10,10" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="Panel_Streams" Background="Transparent" BorderBrush="#404040"/>
        </ScrollViewer>
        <local:UIInputFieldWithName x:Name="Input_OutFileName" Margin="10,56,36,0" InputFieldName="Output file" Height="18" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2"/>

        <DockPanel Margin="10,80,10,0" Grid.Column="1" Height="19" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Label DockPanel.Dock="Left" Padding="0" MinWidth="90" Content="Preset" Foreground="White"/>
            <ComboBox x:Name="Combo_Preset" SelectionChanged="Combo_Preset_SelectionChanged"/>
        </DockPanel>
        <local:UIInputFieldWithName x:Name="Input_VcodecName" Margin="10,125,36,0" InputFieldName="Video codec" Height="18" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="Button_VcodecSelect" Content="..." Margin="0,125,10,0" Grid.Column="1" HorizontalAlignment="Right" Width="26" Height="18" VerticalAlignment="Top"/>
        <local:UIInputFieldWithName x:Name="Input_Vbitrate" Margin="10,148,62,0" InputFieldName="Video bitrate" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
        <local:UIInputFieldWithName x:Name="Input_TrimFrom" Margin="10,199,13,0" InputFieldName="Trim from (HH:MM:SS)" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
        <ComboBox x:Name="Combo_VbitrateUnits" FontSize="11" Margin="0,149,10,0" SelectedIndex="1" Grid.Column="1" HorizontalAlignment="Right" Width="52" Grid.ColumnSpan="1" Height="20" VerticalAlignment="Top">
            <ComboBoxItem Content="bps"/>
            <ComboBoxItem Content="kbps" />
            <ComboBoxItem Content="Mbps" />
            <ComboBoxItem Content="crf" />
        </ComboBox>
        <Button x:Name="Button_Start" Grid.Column="2" Content="Start" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="33" Width="127" Click="Button_Start_Click"/>
        <Button x:Name="Button_OutFileSelect" Content="..." Margin="0,56,10,0" Grid.Column="2" HorizontalAlignment="Right" Width="26" Height="18" VerticalAlignment="Top"/>
        <local:UIInputFieldWithName x:Name="Input_AcodecName" Margin="10,125,36,0" InputFieldName="Audio codec" Height="18" VerticalAlignment="Top" Grid.Column="2"/>
        <Button x:Name="Button_VcodecSelect_Kopiuj" Content="..." Margin="0,125,10,0" Grid.Column="2" HorizontalAlignment="Right" Width="26" Height="18" VerticalAlignment="Top"/>
        <local:UIInputFieldWithName x:Name="Input_Abitrate" Margin="10,148,62,0" InputFieldName="Audio bitrate" Height="21" VerticalAlignment="Top" Grid.Column="2"/>
        <ComboBox x:Name="Combo_AbitrateUnits" FontSize="11" Margin="0,149,10,0" SelectedIndex="1" Grid.Column="2" HorizontalAlignment="Right" Width="52" Grid.ColumnSpan="1" Height="20" VerticalAlignment="Top">
            <ComboBoxItem Content="bps"/>
            <ComboBoxItem Content="kbps" />
            <ComboBoxItem Content="Mbps" />
            <ComboBoxItem Content="crf" />
        </ComboBox>
        <local:UIInputFieldWithName x:Name="Input_TrimTo" Margin="10,199,10,0" InputFieldName="Trim to (HH:MM:SS)" Height="21" VerticalAlignment="Top" Grid.Column="2"/>
        <Label x:Name="Label_LogOutput" Grid.Column="1" Content="" Foreground="#808080" FontSize="9" Margin="10,0,10,48" Grid.ColumnSpan="2" Height="22" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
