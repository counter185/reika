<UserControl x:Class="ReencGUI.UI.UIFFMPEGOperationEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReencGUI.UI"
             mc:Ignorable="d" Padding="0,10" >
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <Label x:Name="Label_Primary" Foreground="White" Content="Primary text" FontSize="18" Margin="0,-5"/>
            <Label x:Name="Label_Secondary" Foreground="#D0D0D0" Content="Secondary text" FontSize="12" Margin="0,-6"/>
            <Label x:Name="Label_Secondary2" Foreground="#D0D0D0" Content="Secondary text 2" FontSize="12" Margin="0,-6"/>
        </StackPanel>
        <ProgressBar Style="{DynamicResource ReencProgressBarStyle}" DockPanel.Dock="Bottom" x:Name="ProgressBar_Operation" Height="10" Margin="0,5,0,0" Minimum="0" Maximum="100" Value="20"/>
    </DockPanel>
</UserControl>
