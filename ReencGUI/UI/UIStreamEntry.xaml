<UserControl x:Class="ReencGUI.UI.UIStreamEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReencGUI.UI"
             mc:Ignorable="d" >
    <StackPanel Margin="10" Orientation="Horizontal">
        <Image x:Name="Image_Thumbnail" Height="70" Width="70"/>
        <StackPanel Orientation="Vertical">
            <Label x:Name="Label_Primary" Foreground="White" Content="Primary text" FontSize="16" FontWeight="Bold" Margin="0,-8"/>
            <Label x:Name="Label_Secondary" Foreground="#D0D0D0" Content="Secondary text" FontSize="16" FontStyle="Italic" Margin="0,-2"/>
            <Label x:Name="Label_Duration" Foreground="#A0A0A0" Content="Details text" FontSize="12" Margin="0,-5"/>
            <Label x:Name="Label_Details" Foreground="#808080" Content="Details text" FontSize="10" Margin="0,-5"/>
        </StackPanel>
    </StackPanel>
</UserControl>
