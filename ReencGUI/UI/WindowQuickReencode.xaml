<Window x:Class="ReencGUI.WindowQuickReencode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReencGUI"
        mc:Ignorable="d"
        Style="{StaticResource ReencWindowStyle}"
        Title="reika: quick reencode" Height="450" Width="800" AllowDrop="True" Drop="Window_Drop">
    <Grid>
        <DockPanel Margin="10" LastChildFill="True">
            <Label DockPanel.Dock="Top" Content="Quick reencode" FontSize="25" Foreground="White"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Drop files here to reencode them to the same directory with the selected preset..." Foreground="#FFB0B0B0"/>
                <DockPanel LastChildFill="True" Margin="0,10">
                    <Label DockPanel.Dock="Left" Content="Preset" Margin="0,0,10,0" Foreground="White"/>
                    <Button DockPanel.Dock="Right" Style="{DynamicResource ReencButtonStyle}" Content="Load" Margin="10,0,0,0" Padding="10,5" Click="Button_Click"/>
                    <ComboBox DockPanel.Dock="Right" x:Name="Combo_Presets"/>
                </DockPanel>
                <CheckBox x:Name="Check_DeleteSourceMedia" HorizontalAlignment="Center" Foreground="White" IsChecked="False" Content="Delete source media on successful encode..."/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
