<Window x:Class="ReencGUI.UI.WindowSetCrop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReencGUI.UI"
        mc:Ignorable="d"
        Style="{StaticResource ReencWindowStyle}"
        Title="reika: set video crop" Height="435" Width="542">
    <Grid Margin="10">
        <DockPanel>
            <DockPanel LastChildFill="False" DockPanel.Dock="Bottom">
                <Rectangle DockPanel.Dock="Top" Height="30"/>
                <Button x:Name="Button_Apply" Style="{StaticResource ReencButtonStyle}" DockPanel.Dock="Right" Width="100" Height="30" Content="Apply" Click="Button_Apply_Click"/>
                <local:UIInputFieldWithName DockPanel.Dock="Left" x:Name="Input_CropArg" InputFieldName="Crop" Width="274" VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                <DockPanel DockPanel.Dock="Left" LastChildFill="True">
                    <Rectangle Height="20" DockPanel.Dock="Top"/>
                    <Rectangle Height="20" DockPanel.Dock="Bottom"/>
                    <Slider Style="{DynamicResource ReencSliderStyle}" x:Name="Slider_Left" Orientation="Vertical" DockPanel.Dock="Top" ValueChanged="Slider_Left_ValueChanged" Maximum="1" Value="1"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Right" LastChildFill="True">
                    <Rectangle Height="20" DockPanel.Dock="Top"/>
                    <Rectangle Height="20" DockPanel.Dock="Bottom"/>
                    <Slider Style="{DynamicResource ReencSliderStyle}" x:Name="Slider_Right" Orientation="Vertical" DockPanel.Dock="Top" ValueChanged="Slider_Right_ValueChanged" Maximum="1" Value="0"/>
                </DockPanel>
                <Slider Style="{DynamicResource ReencSliderStyle}" x:Name="Slider_Top" Orientation="Horizontal" DockPanel.Dock="Top" Height="20" ValueChanged="Slider_Top_ValueChanged" Maximum="1" Value="0"/>
                <Slider Style="{DynamicResource ReencSliderStyle}" x:Name="Slider_Bottom" Orientation="Horizontal" DockPanel.Dock="Bottom" Height="20" ValueChanged="Slider_Bottom_ValueChanged" Maximum="1" Value="1"/>
                <Grid>
                    <Image x:Name="Image_Preview"/>
                    <Canvas x:Name="Canvas_Preview" DockPanel.Dock="Bottom"/>
                </Grid>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
