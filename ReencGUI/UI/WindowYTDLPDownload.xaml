<Window x:Class="ReencGUI.UI.WindowYTDLPDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReencGUI.UI"
        mc:Ignorable="d"
        Style="{StaticResource ReencWindowStyle}"
        Title="reika: download from URL" Height="498" Width="546" MinHeight="375" MinWidth="273">

    <DockPanel Margin="20" LastChildFill="True">
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <Button x:Name="Button_StartDownload" Style="{StaticResource ReencButtonStyle}" DockPanel.Dock="Right" Width="150" Height="30" Content="Start download" Click="Button_StartDownload_Click"/>
            <TextBlock x:Name="Label_FullCommand" TextWrapping="Wrap" Foreground="#505050" FontStyle="Italic" Text="" FontSize="10" VerticalAlignment="Bottom"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="True">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
                <local:UIInputFieldWithName x:Name="Input_URL" InputFieldName="URL" VerticalContentAlignment="Center"/>
                <Separator Height="10" Background="Transparent"/>
                <DockPanel LastChildFill="True">
                    <Button x:Name="Button_OutputFolderPick" Content="..." DockPanel.Dock="Right" Width="30" Style="{StaticResource ReencButtonStyle}" Click="Button_OutputFolderPick_Click"/>
                    <local:UIInputFieldWithName x:Name="Input_OutputFolder" DockPanel.Dock="Left" InputFieldName="Save to" VerticalContentAlignment="Center" />
                </DockPanel>
                <Separator Height="10" Background="Transparent"/>
                <local:UIInputFieldWithName x:Name="Input_ExtraArgs" InputFieldName="Additional yt-dlp args" VerticalContentAlignment="Center"/>

                <Separator Height="15" Background="Transparent"/>

                <StackPanel x:Name="Panel_VideoInfo" Orientation="Vertical" >
                    <Label x:Name="Label_VideoTitle" Content="Video title" Foreground="White" FontWeight="Bold" FontSize="23"/>
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="Label_Channel" Content="Channel name" Foreground="White" FontSize="15"/>
                        <Label x:Name="Label_ID" Content="Video ID" Foreground="Gray" FontStyle="Italic" FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <ListBox x:Name="ListBox_FormatList" DockPanel.Dock="Bottom" Background="Transparent" BorderBrush="#202020"/>
        </DockPanel>
    </DockPanel>

</Window>
